{
  "info": {
    "name": "Next-Mongo API Collection",
    "description": "API collection for Product and Category management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/category",
              "host": ["{{baseUrl}}"],
              "path": ["category"]
            }
          }
        },
        {
          "name": "Get Categories with Pagination",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/category?pno=1",
              "host": ["{{baseUrl}}"],
              "path": ["category"],
              "query": [
                {
                  "key": "pno",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Search Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/category?s=electronics",
              "host": ["{{baseUrl}}"],
              "path": ["category"],
              "query": [
                {
                  "key": "s",
                  "value": "electronics"
                }
              ]
            }
          }
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Electronics\",\n  \"order\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/category",
              "host": ["{{baseUrl}}"],
              "path": ["category"]
            }
          }
        },
        {
          "name": "Update Category",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"_id\": \"CATEGORY_ID_HERE\",\n  \"name\": \"Updated Electronics\",\n  \"order\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/category",
              "host": ["{{baseUrl}}"],
              "path": ["category"]
            }
          }
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/category/CATEGORY_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["category", "CATEGORY_ID_HERE"]
            }
          }
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/category/CATEGORY_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["category", "CATEGORY_ID_HERE"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/product",
              "host": ["{{baseUrl}}"],
              "path": ["product"]
            }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"PROD001\",\n  \"name\": \"iPhone 15\",\n  \"description\": \"Latest iPhone model with advanced features\",\n  \"price\": 999.99,\n  \"category\": \"CATEGORY_ID_HERE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/product",
              "host": ["{{baseUrl}}"],
              "path": ["product"]
            }
          }
        },
        {
          "name": "Update Product (PUT)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"_id\": \"PRODUCT_ID_HERE\",\n  \"code\": \"PROD001\",\n  \"name\": \"iPhone 15 Pro\",\n  \"description\": \"Updated iPhone model with pro features\",\n  \"price\": 1199.99,\n  \"category\": \"CATEGORY_ID_HERE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/product",
              "host": ["{{baseUrl}}"],
              "path": ["product"]
            }
          }
        },
        {
          "name": "Update Product (PATCH)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"_id\": \"PRODUCT_ID_HERE\",\n  \"price\": 1099.99\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/product",
              "host": ["{{baseUrl}}"],
              "path": ["product"]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/product/PRODUCT_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["product", "PRODUCT_ID_HERE"]
            }
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/product/PRODUCT_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["product", "PRODUCT_ID_HERE"]
            }
          }
        }
      ]
    }
  ]
}
